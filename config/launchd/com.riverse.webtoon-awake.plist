<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.riverse.webtoon-awake</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/caffeinate</string>
        <string>-s</string>
        <string>-i</string>
    </array>

    <!-- 항상 실행 유지 -->
    <key>KeepAlive</key>
    <true/>

    <!-- 부팅 시 자동 시작 -->
    <key>RunAtLoad</key>
    <true/>
</dict>
</plist>
